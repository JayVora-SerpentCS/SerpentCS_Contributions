<?xml version="1.0" encoding="utf-8" ?>
<odoo>

    <template id="report_sale_document" inherit_id="sale.report_saleorder_document">
      <!-- Replace the head of the column -->

      <!-- Replace for the Unit Price -->
      <xpath expr="//table[@class='table table-sm o_main_table']/thead/tr/th[3]" position="replace">
        <t t-if="not doc.hide_price">
          <th class="text-right">Unit Price</th>
        </t>
        <t t-if="doc.hide_price">
          <t t-set="colspan" t-value="colspan-1"/>
        </t>
      </xpath>

      <!-- Replace for the Amount and Total Price -->
      <xpath expr="//table[@class='table table-sm o_main_table']/thead/tr/th[5]" position="replace">
        <t t-if="not doc.hide_price">
          <th class="text-right">
                        	<t groups="account.group_show_line_subtotals_tax_excluded">Amount</t>
                        	<t groups="account.group_show_line_subtotals_tax_included">Total Price</t>
                    	</th>
        </t>
        <t t-if="doc.hide_price">
          <t t-set="colspan" t-value="colspan-1"/>
        </t>
      </xpath>


      <!-- Replace the content of the lines in the tab -->
	<xpath expr="//table[@class='table table-sm o_main_table']/tbody/t[2]/tr/t[1]/td[3]" position="replace">
		<td t-if="not doc.hide_price" class="text-right">
	        	<span t-field="line.price_unit"/>
		</td>
	</xpath>

	<xpath expr="//table[@class='table table-sm o_main_table']/tbody/t[2]/tr/t[1]/td[6]" position="replace">
		<td t-if="not doc.hide_price" class="text-right o_price_total">
			<span t-field="line.price_subtotal" groups="account.group_show_line_subtotals_tax_excluded"/>
			<span t-field="line.price_total" groups="account.group_show_line_subtotals_tax_included"/>
		</td>
	</xpath>

	<xpath expr="//table[@class='table table-sm o_main_table']/tbody/t[2]/tr/t[3]" position="replace">
		<t t-if="current_section and (line_last or doc.order_line[line_index+1].display_type == 'line_section') and not doc.hide_price">
			<tr class="is-subtotal text-right">
				<td colspan="99">
					<strong class="mr16">Subtotal</strong>
					<span t-esc="current_subtotal" t-options="{&quot;widget&quot;: &quot;monetary&quot;, &quot;display_currency&quot;: doc.pricelist_id.currency_id}"/>
				</td>
			</tr>
		</t>
	</xpath>
    </template>

</odoo>
