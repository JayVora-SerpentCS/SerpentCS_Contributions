<?xml version="1.0" encoding="utf-8"?>
<odoo>
     <record id="pos_config_view_form_inherit" model="ir.ui.view">
        <field name="name">pos.config.form.view</field>
        <field name="model">pos.config</field>
        <field name="type">form</field>
        <field name="inherit_id" ref="point_of_sale.pos_config_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//div[@id='inventory_location']" position="after">
                <h2>Security Dialog</h2>
                <div class="row mt16 o_settings_container" id="security_dialog">
                    <div class="col-12 col-lg-6 o_setting_box" 
                         title="Security Dialog">
                        <div class="o_setting_left_pane">
                            <field name="enable_security_dialog"/>
                        </div>
                        <div class="o_setting_right_pane">
                            <label for="enable_security_dialog"
                                   string="Enable Security Dialog"/>
                        </div>
                    </div>
                </div>
            </xpath>
        </field>
    </record>
</odoo>
