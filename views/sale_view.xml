<odoo>
        <record id="view_order_form" model="ir.ui.view">
            <field name="name">sale.order.form</field>
            <field name="model">sale.order</field>
            <field name="inherit_id" ref="sale.view_order_form"/>
            <field name="arch" type="xml">
                <field name="tax_id" position="after">
                    <field name="picking_group_id"/>
                </field>
                <xpath expr='//field[@name="order_line"]/tree//field[@name="tax_id"]' position="after">
                    <field name="picking_group_id"/>
                </xpath>
            </field>
        </record>

        <record model="ir.ui.view" id="view_sale_order_line_groups_tree">
            <field name="name">Sale order line Groups</field>
            <field name="model">sale.order.line.group</field>
            <field name="arch" type="xml">
                <tree string="Sale order line Groups" editable="top">
                    <field name="name" required="1"/>
                    <field name="company_id" required="1"/>
                </tree>
            </field>
        </record>

        <record id="action_sale_order_line_group_form" model="ir.actions.act_window">
            <field name="name">Sale order line Groups</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">sale.order.line.group</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
        </record>

        <menuitem action="action_sale_order_line_group_form" id="menu_action_sale_order_line_group_form" parent="base.menu_sale_config" />
</odoo>
