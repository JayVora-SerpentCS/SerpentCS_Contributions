<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_category_property_form" model="ir.ui.view">
        <field name="name">partner.over.credit.limit.form.inherit</field>
        <field name="model">res.partner</field>
        <field name="type">form</field>
        <field name="inherit_id" ref="account.view_partner_property_form"/>
        <field name="arch" type="xml">
            <group name="acc_sale" position="inside">
                <field name="credit_limit" readonly="1"/>
                <field name="over_credit" readonly="1"/>
            </group>
        </field>
    </record>
    <record id="partner_edit_credit_form_editable" model="ir.ui.view">
        <field name="name">partner.edit.credit.form.editable</field>
        <field name="model">res.partner</field>
        <field name="type">form</field>
        <field name="inherit_id" ref="partner_credit_limit.view_category_property_form"/>
        <field name="groups_id" eval="[(6, 0, [ref('partner_credit_limit.credit_limit_permissions')])]"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='credit_limit']" position="attributes">
                <attribute name="readonly">0</attribute>
            </xpath>
            <xpath expr="//field[@name='over_credit']" position="attributes">
                <attribute name="readonly">0</attribute>
            </xpath>
        </field>
    </record>
</odoo>
